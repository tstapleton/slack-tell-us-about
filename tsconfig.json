{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"paths": {
			"src/*": ["src/*"]
		},
		"resolveJsonModule": true
	},
	"include": ["src"],
	"ts-node": {
		"files": true,
		"require": ["tsconfig-paths/register", "dotenv/config"],
		"transpileOnly": true
	}
}
