{
	"name": "slack-tell-us-about",
	"version": "0.0.1",
	"description": "A Slack app for posting prompts to #tell-us-about",
	"main": "index.js",
	"scripts": {
		"compile": "tsc",
		"format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
		"start": "ts-node src/index.ts",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tstapleton/slack-tell-us-about.git"
	},
	"author": "Thomas Stapleton",
	"bugs": {
		"url": "https://github.com/tstapleton/slack-tell-us-about/issues"
	},
	"homepage": "https://github.com/tstapleton/slack-tell-us-about#readme",
	"dependencies": {
		"@slack/bolt": "3.2.0",
		"@slack/web-api": "6.0.0",
		"dotenv": "8.2.0",
		"ts-node": "9.1.1",
		"typescript": "4.1.4"
	},
	"devDependencies": {
		"husky": "5.0.9",
		"lint-staged": "10.5.4",
		"prettier": "2.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"prettier --write"
		]
	}
}
